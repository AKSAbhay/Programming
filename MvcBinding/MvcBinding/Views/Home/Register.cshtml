
@{
    ViewBag.Title = "Register";
}

<h2 class="text-center">Register</h2>
<form>
    <center>
        <table>
            <tr>
                <td>First Name</td>
                <td><input type="text" id="txtFName" name="txtFName" /></td>
            </tr>
            <tr>
                <td>Last Name</td>
                <td><input type="text" id="txtLName" name="txtLName" /></td>
            </tr>
            <tr>
                <td>Email</td>
                <td><input type="email" id="txtEmail" name="txtEmail" /></td>
            </tr>
            <tr>
                <td>Mobile No</td>
                <td><input type="number" id="txtMobile" name="txtMobile" /></td>
            </tr>
            <tr>
                <td><label>Choose User Type</label></td>
                <td>
                    <select>
                        <option>----Select User Type----</option>
                        <option value="Admin">Admin</option>
                        <option value="User">User</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td></td>
                <td colspan="2">
                    <input type="submit" value="Register" />
                    <input type="reset" value="Reset" />
                </td>
            </tr>
        </table>
    </center>
</form>

